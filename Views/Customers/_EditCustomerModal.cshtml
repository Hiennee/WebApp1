<div class="modal" id="EditCustomerModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" asp-action="Edit" asp-controller="Customers">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="modal-header">
                    <h4 class="modal-title">
                        <i class="bi bi-search"></i>
                        Chỉnh sửa khách hàng
                    </h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="editCustomerId">Mã khách hàng</label>
                        <input class="form-control" type="text" id="editCustomerId" name="customerId" readonly/>
                    </div>
                    <div class="form-group">
                        <label for="editCustomerName">Tên khách hàng</label>
                        <input class="form-control" type="text" id="editCustomerName" name="customerName" />
                    </div>
                    <div class="form-group">
                        <label for="editPhone">Số điện thoại</label>
                        <input class="form-control" type="number" id="editPhone" name="phone" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSubmitEdit" type="button" class="btn btn-primary">
                        <i class="bi bi-search"></i> Sửa
                    </button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $("#btnSubmitEdit").click(function() {
        var json = {
            customerId: $("#editCustomerId").val(),
            customerName: $("#editCustomerName").val(),
            phone: $("#editPhone").val()
        };
        $.ajax({
            url: "/Customers/Edit",
            type: "POST",
            data: json,
            success: function (response) {
                alert("Cập nhật khách hàng thành công");
                $("#EditCustomerModal").modal("hide");
                window.location.href = "/Customers/"
            },
            error: function (error) {
                alert(error);
            }
        })
    })
</script>